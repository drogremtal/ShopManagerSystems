@model ShopManagerSystems.ViewModel.UserDetailEditViewModel

@{
    ViewBag.Title = "Рекдактировать пользователя";
}

<form asp-action="Edit" asp-controller="Home">
    <input type="hidden" asp-for="UserId" value="@Model.UserId"/>
    <div class="row g-3">
        <div class="form-group col-md-4">
            <label asp-for="LastName" class="control-label">Фамилия</label>
            <input type="text" asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="FirstName" class="control-label">Имя</label>
            <input type="text" asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="PatronicName" class="control-label">Отчество</label>
            <input type="text" asp-for="PatronicName" class="form-control" />
        </div>
    </div>
   <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BirthDate" class="control-label">Дата рождения</label>
        <input type="date" asp-for="BirthDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNum" class="control-label">Телефон</label>
        <input type="text" asp-for="PhoneNum" class="form-control" />
    </div>
    <div class="form-group col-12">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>

